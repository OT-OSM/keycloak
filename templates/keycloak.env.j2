# -------- Admin bootstrap --------
KC_BOOTSTRAP_ADMIN_USERNAME={{ keycloak_admin_user }}
KC_BOOTSTRAP_ADMIN_PASSWORD={{ keycloak_admin_password }}

# -------- HTTP --------
KC_HTTP_ENABLED=true
KC_HTTP_PORT={{ keycloak_http_port }}
KC_HTTP_HOST=0.0.0.0

# -------- Reverse Proxy --------
KC_PROXY=edge
KC_PROXY_HEADERS=xforwarded

# -------- Hostname --------
KC_HOSTNAME={{ keycloak_public_hostname }}
KC_HOSTNAME_STRICT=false
KC_HOSTNAME_STRICT_HTTPS=false

# -------- Observability --------
KC_HEALTH_ENABLED={{ keycloak_health_enabled | lower }}
KC_METRICS_ENABLED={{ keycloak_metrics_enabled | lower }}
KC_HTTP_MANAGEMENT_PORT={{ keycloak_management_port }}

# -------- Database --------
KC_DB=postgres
KC_DB_URL=jdbc:postgresql://{{ keycloak_db_host }}:{{ keycloak_db_port }}/{{ keycloak_db_name }}
KC_DB_USERNAME={{ keycloak_db_user }}
KC_DB_PASSWORD={{ keycloak_db_password }}
